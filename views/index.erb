<html>
  <head>
    <title>Recipes</title>
  </head>
  <body>
    <h1>Recipes</h1>
    <ul>
      <% @recipes.each_with_index do |recipe, index| %>
        <li><a href="<%= recipe.url %>"><%= recipe.name %></a>
          <div>
            <p><%= recipe.description %></p>
            <form action="./done" method="post">
              <% unless recipe.done %>
            Mark as Done?
              <input type="checkbox" name="index_to_mark_as_done" value="<%= index %>">
              <input type="submit" value="Done!">
              <% else %>
              This recipe is done!!
              <% end %>
          </form>
            <form action="./delete" method="post">
              <input type="hidden" name="index_to_delete" value="<%= index %>">
              <input type="submit" value="Delete">
            </form>
          </div>
        </li>
      <% end %>
    </ul>
    <a href="./new">Add New Recipe</a>
  </body>
</html>
